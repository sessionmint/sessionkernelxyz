# ============================================
# SessionMint / ChartGoBrrAlpha Environment
# ============================================

# -------- Public (client-visible) --------
NEXT_PUBLIC_TREASURY_WALLET=
NEXT_PUBLIC_DEFAULT_TOKEN_MINT=
NEXT_PUBLIC_PHANTOM_APP_ID=
NEXT_PUBLIC_LIVESTREAM_URL=https://player.kick.com/sessionmint

# Solana RPC for browser-side transaction flow
# Option A: full URL (with API key embedded)
NEXT_PUBLIC_HELIUS_RPC_URL=
# Option B: key only (runtime constructs helius URL)
NEXT_PUBLIC_HELIUS_API_KEY=

# Client-side feature flag for Autoblow sync
NEXT_PUBLIC_AUTOBLOW_ENABLED=false

# -------- Server-only (secrets / backend) --------
HELIUS_API_KEY=

AUTOBLOW_ENABLED=false
AUTOBLOW_API_URL=https://latency.autoblowapi.com
AUTOBLOW_DEVICE_TOKEN=
AUTOBLOW_TIMEOUT_MS=10000

# Firebase / Google Cloud runtime
FIREBASE_PROJECT_ID=
# Use "(default)" for standard projects or your named database id (e.g. "sessionkernel")
FIRESTORE_DATABASE_ID=(default)
GOOGLE_CLOUD_REGION=
STATE_TICK_QUEUE_ID=

# Protected state tick endpoint secret
CRON_SECRET=

# Optional admin key for future protected endpoints
ADMIN_API_KEY=

# Optional runtime tuning
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
